<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>cn.edu.nju.ics</groupId>
	<artifactId>chameleon-transactional-kvstore-maven</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>chameleon-transactional-kvstore-maven</name>
	<description>A distributed, partitioned, replicated, transactional key-val store.</description>

	<properties>
		<skipTests>true</skipTests>		<!-- skipping tests by default -->
	</properties>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<testSourceDirectory>src/test/java</testSourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id> <!-- this is used for inheritance merges -->
						<phase>package</phase> <!-- register to the packaging phase -->
						<goals>
							<goal>single</goal>
						</goals>
					</execution>

                    <!-- for client: client -->
                    <execution>
                        <id>client</id>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <archive>
                                <manifest>
                                    <mainClass>main.ClientLauncher</mainClass>
                                </manifest>
                            </archive>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <finalName>client</finalName>
                            <finalName>aliyun/client</finalName>
                        </configuration>
                        <phase>package</phase> <!-- register to the packaging phase -->
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>

                    <!-- for client on aliyun -->
                    <execution>
                        <id>client-aliyun</id>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <archive>
